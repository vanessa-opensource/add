			ТекстЗапроса = ТекстЗапроса + Символы.ПС + "ОбъектЗапроса." + ЭлементОтбора.Ключ + " = " + ЭлементОтбора.Значение;
		КонецЦикла;
	КонецЕсли;



	Запрос.Текст = ТекстЗапроса;

	РезультатЗапроса = Запрос.Выполнить().Выбрать();

	Возврат РезультатЗапроса;

