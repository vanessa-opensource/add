	ТекстЗапроса =
	"ВЫБРАТЬ РАЗРЕШЕННЫЕ ПЕРВЫЕ 1
	|	ОбъектЗапроса.Ссылка
	|ИЗ
	|	Справочник.%1 КАК ОбъектЗапроса";

	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "%1", ИД);

	Если Отбор.Количество() <> 0 Тогда
		ТекстЗапроса = ТекстЗапроса  + Символы.ПС + " ГДЕ";
