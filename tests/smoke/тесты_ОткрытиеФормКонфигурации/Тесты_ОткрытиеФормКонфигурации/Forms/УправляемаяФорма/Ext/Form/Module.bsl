	КонецЕсли;

	Для Каждого ПолеФормы Из ОкноПриложения.НайтиОбъекты(Тип("ТестируемоеПолеФормы")) Цикл
		Если Найти(НРег(ПолеФормы.ТекстЗаголовка), "данные были изменены") > 0 Тогда
			Кнопки[1].Нажать();
			Возврат;
		КонецЕсли;
	КонецЦикла;

	Кнопки[0].Нажать();

КонецПроцедуры

