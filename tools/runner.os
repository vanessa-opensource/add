Процедура Инициализация()
	ИмяФайлаНастроек = "env.json";
	РезультатыОбработкиВнешнихОбработок = Новый Соответствие;
	
	СистемнаяИнформация = Новый СистемнаяИнформация;
	ЭтоWindows = Найти(ВРег(СистемнаяИнформация.ВерсияОС), "WINDOWS") > 0;

	ОтключитьОтладочныеЛоги = Истина;
	Если АргументыКоманднойСтроки.Количество() = 0 Тогда
		ОтключитьОтладочныеЛоги = Истина;
	ИначеЕсли АргументыКоманднойСтроки.Количество() = 1  Тогда
		Если АргументыКоманднойСтроки[0] = ВозможныеКоманды().Помощь 
			или АргументыКоманднойСтроки[0] = ВозможныеКоманды().ПоказатьВерсию Тогда
				ОтключитьОтладочныеЛоги = Истина;
		КонецЕсли;
	КонецЕсли;

	Лог = Логирование.ПолучитьЛог("oscript.app.vanessa-runner");
	Попытка 
		КаталогЛогов = СокрЛП(ЗапуститьПроцесс("git rev-parse --show-toplevel"));
	Исключение
		КаталогЛогов = ОбъединитьПути(КаталогВременныхФайлов(), ИмяСкрипта());
		СоздатьКаталог(КаталогЛогов);
	КонецПопытки;  

	УровеньЛога = ?(ОтключитьОтладочныеЛоги = Истина, УровниЛога.Информация, УровниЛога.Отладка);
	РежимРаботы = ПолучитьПеременнуюСреды("RUNNER_ENV");
	Если ЗначениеЗаполнено(РежимРаботы) И Нрег(РежимРаботы) = "debug" Тогда
		УровеньЛога = УровниЛога.Отладка;
		Аппендер = Новый ВыводЛогаВФайл();
		ИмяВременногоФайла = Новый Файл(ПолучитьИмяВременногоФайла()).Имя;
		Аппендер.ОткрытьФайл(ОбъединитьПути(КаталогЛогов, СтрШаблон("%1.%2.log", ИмяСкрипта(), ИмяВременногоФайла)));
		Лог.ДобавитьСпособВывода(Аппендер);
	КонецЕсли;
	
	Лог.УстановитьУровень(УровеньЛога);
	Лог.УстановитьРаскладку(ЭтотОбъект);
	
	ВыводПоУмолчанию = Новый ВыводЛогаВКонсоль();
	Лог.ДобавитьСпособВывода(ВыводПоУмолчанию);
	
КонецПроцедуры

Функция ПрочитатьНастройкиФайлJSON(Знач ТекущийКаталогПроекта, Знач ПутьКФайлу = Неопределено )

	Лог.Отладка(":"+ПутьКФайлу+":"+ИмяФайлаНастроек);
	Если ПутьКФайлу = Неопределено ИЛИ НЕ ЗначениеЗаполнено(ПутьКФайлу) Тогда 
		ПутьКФайлу = ОбъединитьПути(ТекущийКаталогПроекта, ИмяФайлаНастроек);
	КонецЕсли;
	Лог.Отладка(ПутьКФайлу);

	Возврат ПрочитатьФайлJSON(ПутьКФайлу);
КонецФункции

Функция УказанПараметрТолстыйКлиент(ПараметрТолстыйКлиентИзКоманднойСтроки = Неопределено)
	Если ПараметрТолстыйКлиентИзКоманднойСтроки = Неопределено Тогда
		ЗапускатьТолстыйКлиент = Истина;
	Иначе
		ЗапускатьТолстыйКлиент = ПараметрТолстыйКлиентИзКоманднойСтроки = Истина
			ИЛИ СокрЛП(Строка(ПараметрТолстыйКлиентИзКоманднойСтроки)) = "1" ;
	КонецЕсли;
	
	Лог.Отладка(СтрШаблон("Для выбора режима толстого клиента передан параметр --ordinaryapp, равный %1 ", ПараметрТолстыйКлиентИзКоманднойСтроки));
	Если ЗапускатьТолстыйКлиент Тогда
		Лог.Отладка("Запускаем толстый клиент 1С.");
	Иначе
		Лог.Отладка("Запускаем тонкий клиент 1С.");
	КонецЕсли;
	
	Возврат ЗапускатьТолстыйКлиент;
КонецФункции

